<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/card_view"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"

  >
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="110dp">

        <RelativeLayout
            android:background="#3d806e"
            android:layout_width="150dp"
            android:layout_height="110dp">


            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:textAlignment="center"
                android:textColor="@color/white"
                android:textStyle="bold"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="$45"
                android:textSize="35dp"
                android:id="@+id/amount_card"
                android:layout_alignParentTop="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true" />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAlignment="center"
                android:textColor="@color/white"
                android:text="27-May-2016 11:00"
                android:textSize="16dp"
                android:textStyle="bold"
                android:id="@+id/date_card"
                android:layout_marginBottom="5dp"
                android:layout_alignParentBottom="true"
               />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:textAlignment="center"
                android:textStyle="bold"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="Ankit Kumar"
                android:textSize="20dp"
                android:id="@+id/name_card"
                android:layout_alignParentTop="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true" />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="3dp"
                android:textAlignment="center"
                android:textStyle="bold"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="2012ankitkmr@gmail.com"
                android:textSize="14dp"
                android:layout_below="@+id/name_card"
                android:id="@+id/email_card"
 />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:textAlignment="center"
                android:textStyle="bold"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="0898798897"
                android:textSize="14dp"
                android:id="@+id/phone_card"
                android:layout_below="@+id/email_card"
   />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAlignment="center"
                android:text="Next Reminder: 27/07/16 20:22"
                android:textSize="12dp"
                android:id="@+id/reminder_card"
                android:layout_alignParentBottom="true"
                />


        </RelativeLayout>







    </LinearLayout>


</android.support.v7.widget.CardView>